# TikTok OAuth Configuration
# Get these from TikTok for Developers: https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# App Configuration
APP_BASE_URL=http://localhost:3000

# TikTok API Scopes (comma-separated)
# Required scopes: user.info.basic, video.list
TIKTOK_SCOPES=user.info.basic,video.list

# Next.js Public Variables (for client-side use)
NEXT_PUBLIC_APP_BASE_URL=http://localhost:3000
NEXT_PUBLIC_TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
NEXT_PUBLIC_TIKTOK_SCOPES=user.info.basic,video.list
